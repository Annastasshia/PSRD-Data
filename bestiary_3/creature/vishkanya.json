                        {
                            "name": "Vishkanya Venom", 
                            "source": "Bestiary 3", 
                            "url": "pfsrd://Bestiary 3/Monsters/Vishkanya/Special Abilities/Toxic/Vishkanya Venom", 
                            "contracted": "injury", 
                            "section_id": 2232, 
                            "effect": "1d2 Dexterity", 
                            "subtype": "poison", 
                            "cure": "1 save", 
                            "frequency": "1/round for 6 rounds", 
                            "save": "Fortitude DC 10 + 1/2 the vishkanya's Hit Dice + the vishkanya's Constitution modifier", 
                            "type": "affliction"
                        }
                    ]
                }
            ], 
            "section_id": 2229, 
